{
  "name": "hfjscli",
  "version": "0.1.0",
  "description": "A command-line interface for uploading and downloading files from Hugging Face Hub",
  "main": "dist/index.js",
  "bin": {
    "hfjscli": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist bin",
    "lint": "eslint src tests --ext .ts && prettier --check src tests",
    "pkg": "npm run build && npm-run-all pkg:*",
    "pkg:macos": "pkg dist/index.js --targets latest-macos-x64 --output bin/macos/hfjscli",
    "pkg:linux": "pkg dist/index.js --targets latest-linux-x64 --output bin/linux/hfjscli",
    "pkg:win": "pkg dist/index.js --targets latest-win-x64 --output bin/windows/hfjscli.exe",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "postinstall": "chmod +x dist/index.js || true"
  },
  "keywords": [
    "huggingface",
    "cli",
    "upload",
    "download",
    "hub"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@huggingface/hub": "^2.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@yao-pkg/pkg": "^6.6.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "node_modules/@huggingface/hub/**/*"
    ],
    "outputPath": "bin"
  }
}
